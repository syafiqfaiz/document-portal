<div class="container">
  <%= render 'common/shared/menu' %>

  <h3>Document Index</h3>
  <table class="table table-hover">
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Category</th>
      <th>Preview Image</th>
      <th>Action</th>
    </tr>
    <% @documents.each do |doc| %>
    <tr>
      <td><%= doc.name %></td>
      <td><%= doc.description %></td>
      <td><%= Category.find(doc.category_id).name %></td>
      <td>Image</td>
      <td><button class="btn btn-primary">Do Something</button></td>
    </tr>
    <% end %>
  </table>


</div>