<div class="section" id="profile">
  <div class="description">
    <div class="container">

      <h4>Document List</h4>

      <div class="search">
        <%= form_tag documents_path, method: :get do %>
        <p>
          <%= text_field_tag :query, params[:query] %>
          <%= submit_tag "Search", name: nil %>
        </p>
        <% end %>
      </div>


      <div class="documents">
        <table class="table table-hover">
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Category</th>
            <th>Download</th>
          </tr>
          <% @documents.each do |doc| %>
          <tr>
            <td>
             <%= link_to(doc.name.titleize ,category_document_path(doc.category, doc)) %></td>
            <td><%= doc.description %></td>
            <td><%= doc.category.name.titleize %></td>
            <td>
              <%= link_to("Download",download_path(doc),class: "btn btn-primary") %>
            </td>
          </tr>
          <% end %>
        </table>
        <%= paginate @documents %>
      </div>

    </div>
  </div>

</div>
